<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sheena.homegram.post.comment.dao.CommentDAO">

	<!-- comment를 insert하는 과정 -->
	<insert id="insertComment" parameterType="map">
		INSERT INTO `comment`
		(
			`postId`
			, `userId`
			, `userName`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{postId}
			, #{userId}
			, #{userName}
			, #{content}
			, now()
			, now()
		)
	</insert>
	
	<!-- postId 기반으로 comment 가져오기 -->
	<select id="selectComment" parameterType="int" resultType="com.sheena.homegram.post.comment.model.CommentModel">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `userName`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
	</select>

</mapper>