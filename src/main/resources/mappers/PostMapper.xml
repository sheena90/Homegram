	<!-- 게시물 가져오기 -->
	<select id="selectPostList" resultType="com.sheena.homegram.post.model.PostModel">
		SELECT
			`id`
			, `userId`
			, `userName`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>

</mapper>  
  