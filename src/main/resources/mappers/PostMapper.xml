<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sheena.homegram.post.dao.PostDAO">

	<!-- 통합버전 -->
	<insert id="insertCreatePost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `userName`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		) 
		VALUE 
		(
			 #{userId}
			, #{userName}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	</insert>




	<!-- 분리버전(사진 업로드) -->
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `userName`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		) 
		VALUE 
		(
			 #{userId}
			, #{userName}
			, #{imagePath}
			, now()
			, now()
		)
	</insert>
	
	
	
	
	
	<!-- 분리버전(게시물 업로드) -->
